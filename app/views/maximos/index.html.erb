<p id="notice"><%= notice %></p>

<h1>Maximos</h1>

<table>
  <thead>
    <tr>
      <th>Juego</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maximos.each do |maximo| %>
      <tr>
        <td><%= maximo.juego %></td>
        <td><%= maximo.puntaje %></td>
        <td><%= link_to 'Show', maximo %></td>
        <td><%= link_to 'Edit', edit_maximo_path(maximo) %></td>
        <td><%= link_to 'Destroy', maximo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Maximo', new_maximo_path %>
